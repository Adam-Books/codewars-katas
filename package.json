{
  "license": "MIT",
  "name": "codewars-katas",
  "description": "Codewars katas ark",
  "author": {
    "name": "Leonardo Galante",
    "email": "lndgalante@gmail.com"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@types/moment": "^2.13.0",
    "@types/ramda": "^0.26.8",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-extended": "^0.11.1",
    "prettier": "^1.17.0",
    "xo": "0.21.1"
  },
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "test-watch": "jest -o --watch",
    "update-index": "node ./lib/index/index-generator.js",
    "install-generator-deps": "cd ./lib/katas && npm install",
    "create-kata": "node --no-warnings ./lib/katas/kata-generator.js --link"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "prettier",
      "plugin:jest/recommended"
    ],
    "ignores": [
      "lib"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "eslintIntegration": true
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
