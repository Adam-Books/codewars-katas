{
  "license": "MIT",
  "name": "codewars-katas",
  "description": "Codewars katas repository",
  "author": {
    "name": "Leonardo Galante",
    "email": "lndgalante@gmail.com"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.24.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.10.0",
    "prettier": "^1.14.3",
    "xo": "0.21.1"
  },
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "create-kata": "./utils/new.sh",
    "generate-index": "node ./utils/index-generator.js"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "prettier",
      "plugin:jest/recommended"
    ],
    "ignores": [
      "utils/boilerplate.js",
      "utils/boilerplate.test.js"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "eslintIntegration": true
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./boilerplate.js",
      "./boilerplate.test.js"
    ],
    "setupTestFrameworkScriptFile": "jest-extended",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
